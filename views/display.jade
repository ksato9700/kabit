extends layout

block extra_header
  script(src="/js/three.min.js")
  script(src="/js/coffee-script.js")
  script(src="/js/kdisplay.coffee", type="text/coffeescript")
  style()
    canvas { width: 100%; height: 100%}

block content
  h1 Display
  for i in [1, 2, 3, 4]
    for type in ["charging", "chargingTime", "level", "dischargingTime"]
      div(id="#{type}-#{i}")
    br
  
  script(type="text/javascript")
    window.onload = function(){
      window.host_url = "#{host_url}";
    };
  div#container()
